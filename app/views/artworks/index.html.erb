<p id="notice"><%= notice %></p>

<h1>Gallery</h1>

    <% @artworks.each do |artwork| %>
      <div class="index-card">
        <div class="show-image">
            <%= image_tag artwork.picture %>
          </div>
        <p><%= artwork.title %></p>
        <p><%= artwork.year %></p>
        <p><%= artwork.medium %></p>
        <p><%= artwork.size %></p>
        <p><%= artwork.price %></p>
      <% if current_user.admin %>
      <ul>
        <li><%= link_to 'Show', artwork %></li>
        <li><%= link_to 'Edit', edit_artwork_path(artwork) %></li>
        <li><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
      <% end %>
    </div>
      
    <% end %>
  

<br>

<% if current_user.admin %>
<%= link_to 'New Artwork', new_artwork_path %>
<% end %>
